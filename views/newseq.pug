extends layoutIn.pug

block content
	.center
		form#form_add_seq(seqID="addseq", method="post", action="/addseq", enctype='multipart/form-data')
			p Sequence Name
			input.form-control#input_seqdesc(type="text", placeholder="Sample 01 Experiment 01", name="seqDesc")
			br
			p Organism
			input.form-control#input_organism(type="text", placeholder="E. Coli", name="organism")
			br
			p.grayed placeholder 01
			input.form-control.grayed(type="text", placeholder="for other data formats, for future upgrades", readonly, disabled="disabled")
			br
			p.grayed placeholder 02
			input.form-control.grayed(type="text", placeholder="for other data formats, for future upgrades", readonly, disabled="disabled")
			br
			p.grayed placeholder 03
			input.form-control.grayed(type="text", placeholder="for other data formats, for future upgrades", readonly, disabled="disabled")
			br
			p.grayed placeholder 04
			input.form-control.grayed(type="text", placeholder="for other data formats, for future upgrades", readonly, disabled="disabled")
			br
			p 
				font(size="4") Please select your sequence file (fasta only).
			br
			input.form-control-file(name='file-to-upload', type='file', accept=".fasta,.fa,.fna")
			br
			button#submit_seq(type="submit") submit metadata

extends layoutIn.pug

block content
  .center
    br
    br
    img.img-circle(src=user.thumbnail, height="150", width="150")
    h1(align="center") #{user.username}
    p 
      b Reputation: 
      | #{user.reputation}
    p 
      b Account Type: 
      | #{user.acType}
    p 
      b Email Address: 
      | #{user.email}  
    p 
      b Contact Number: 
      input#input_contact(type="text", placeholder=user.contact, name="contact")
    p 
      b Date of Birth: 
      input#input_dob(type="text", placeholder=user.dob, name="dob")
    p 
      b Designation: 
      input#input_desig(type="text", placeholder=user.desig, name="desig")
    p 
      b Institution: 
      input#input_insti(type="text", placeholder=user.insti, name="insti")
    p 
      b Institution Address: 
      textarea.form-control(placeholder=user.instiAdd, name="instiAdd")
    br
    a(href='/pedit')
      button.btn.btn-danger(type='button') Save Changes
